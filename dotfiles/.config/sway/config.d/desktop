
# Desktop bar without battery
bar {
    position bottom
    status_command while date +'%d-%m-%Y %H:%M:%S'; do sleep 1; done

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #323232FF #323232FF #5c5c5c    
    }

    hidden_state hide
    mode hide
    modifier Mod4
}


input type:keyboard {
    repeat_delay 180
    repeat_rate 50

    xkb_layout us

    xkb_options caps:swapescape
}


