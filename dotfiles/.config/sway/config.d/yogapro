
bar {
    position bottom
    status_command ~/stuff/dotfiles/.config/sway/scripts/status.sh


    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #323232FF #323232FF #5c5c5c    
    }

    hidden_state hide
    mode hide
    modifier Mod4
}

input type:keyboard {
    repeat_delay 180
    repeat_rate 50
    xkb_layout us
}

# Swap escape and caps only on integrated keyboard
input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_options caps:swapescape
}

# output settings for this device
output "eDP-1" {
    scale 1.5
    scale_filter nearest
}

# aggressive swayidle only on laptop
exec swayidle -w \
         timeout 1000 'swaylock -f -c 000000' \
         timeout 1000 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -c 000000'

